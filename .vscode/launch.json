{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Build",
            "request": "launch",
            "runtimeArgs": ["run", "build"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "name": "Launch Start",
            "program": "${workspaceFolder}/node_modules/.bin/next",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "args": ["start"],
            "type": "node"
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        }
    ]
}
