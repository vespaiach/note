doctype html
html
  head
    title Trinh Nguyen's blog | vespaiach.com
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:wght@400;500;600;700&display=swap", rel="stylesheet")
    link(rel="stylesheet", href="/css/prism.css")
    link(rel="stylesheet", href="/css/main.css")
    script(src="/js/prism.js")
    script(src="/js/main.js")

  body
    header(id="top")
      div(class='header')
        div(class='bio')
          img(src='/images/avatar.jpeg', title='Trinh Nguyen', alt='Trinh Nguyen', class='bio-avatar')
          div(class='bio-text')
            h2 Trinh Nguyen
            p Hello, I am a computer lover and a software engineer with passion for web techonogies and all things open source.
        div(class='tags')
          a(href='#', data-tag='all') All::#{total}
          each tag, index in tags
            a(href='#', data-tag=tag.slug) #{tag.slug}::#{tag.count}

    div(class="content", id="content")
      each item in frontmatters
        section(class="excerpt", data-tags=item.tags)

          div(class="post-meta")
            div(class="meta")
              svg(xmlns="http://www.w3.org/2000/svg", height="1em", viewBox="0 0 448 512")
                path(d="M0 80V229.5c0 17 6.7 33.3 18.7 45.3l176 176c25 25 65.5 25 90.5 0L418.7 317.3c25-25 25-65.5 0-90.5l-176-176c-12-12-28.3-18.7-45.3-18.7H48C21.5 32 0 53.5 0 80zm112 32a32 32 0 1 1 0 64 32 32 0 1 1 0-64z")
              span(class="tag")= item.tags
            div(class="meta")
              svg(xmlns="http://www.w3.org/2000/svg", height="1em", viewBox="0 0 448 512")
                path(d="M152 24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64H64C28.7 64 0 92.7 0 128v16 48V448c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192 144 128c0-35.3-28.7-64-64-64H344V24c0-13.3-10.7-24-24-24s-24 10.7-24 24V64H152V24zM48 192H400V448c0 8.8-7.2 16-16 16H64c-8.8 0-16-7.2-16-16V192z")
              span(class="date", data-date=item.date)= item.date
          
          a(href=item.link, class="title", title=item.title)
            h2= item.title

          p= item.excerpt

          
    footer
      div(class="footer")
        a(href="https://www.linkedin.com/in/trinh-nguyen-0a701526") LinkedIn
        span &nbsp;|&nbsp;
        a(href='https://github.com/vespaiach') Github 
    a(class="back-to-top", href="#top") top
